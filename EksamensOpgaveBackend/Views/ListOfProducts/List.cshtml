@model IEnumerable<EksamensOpgaveBackend.Models.ProductModel>

@{
    ViewData["Title"] = "Liste af Produkter";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Navn</th>
            <th>Beskrivelse</th>
            <th>Pris</th>
            <th>Billede</th>
            <th>Produktionsår</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Produktbillede" style="width:100px; height:auto;" />
                    }
                    else
                    {
                        <span>Ingen billede</span>
                    }
                </td>
                <td>@product.YearOfProduction</td>
            </tr>
        }
    </tbody>
</table>
